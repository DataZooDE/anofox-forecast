FROM ts_ml_folds_by('test_boundary_groups', series_id, ds, y, 1, 2, {'window_type': 'fixed', 'min_train_size': 12, 'clip_horizon': true})
GROUP BY series_id, fold_id, split
ORDER BY series_id, fold_id, split;
----
