# Test that groups just below min_train_size are excluded
statement ok
CREATE TEMP TABLE test_boundary_groups AS
SELECT series_id, CAST(i AS INTEGER) AS ds, CAST(i AS DOUBLE) AS y
FROM (
    SELECT 'g11' AS series_id, i FROM generate_series(1, 11) AS t(i)
    UNION ALL
    SELECT 'g12' AS series_id, i FROM generate_series(1, 12) AS t(i)
    UNION ALL
    SELECT 'g13' AS series_id, i FROM generate_series(1, 13) AS t(i)
    UNION ALL
    SELECT 'g14' AS series_id, i FROM generate_series(1, 14) AS t(i)
);

# With min_train_size=12 and horizon=2, need at least 14 points
# g11 (11 pts): excluded (< 12)
# g12 (12 pts): excluded (12 train, no room for 2 test)
# g13 (13 pts): excluded (12 train, only 1 test point, need 2)
# g14 (14 pts): included (12 train + 2 test)
query IIII
SELECT series_id, fold_id, split, COUNT(*) AS cnt
FROM ts_ml_folds_by('test_boundary_groups', series_id, ds, y, 1, 2, {'window_type': 'fixed', 'min_train_size': 12})
GROUP BY series_id, fold_id, split
ORDER BY series_id, fold_id, split;
----
g14	1	test	2
g14	1	train	12

