# Test: Workflow - stats then filtering
statement ok
CREATE TABLE quality_series AS
SELECT series_id
FROM stats_result
WHERE is_constant = false AND n_null = 0;

# Verify only non-constant, non-null series selected
query I
SELECT COUNT(*) <= 1
FROM quality_series;
